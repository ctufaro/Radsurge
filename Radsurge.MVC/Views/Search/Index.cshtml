@model Radsurge.MVC.Models.SearchResults

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Radsurge Results</title>
    <link rel="stylesheet" href='@Url.Content("~/Content/Styles/searchresults.css")'>
    <link rel="stylesheet" href='@Url.Content("~/Content/Styles/buttons.css")'>
    <link rel="stylesheet" href='@Url.Content("~/Content/Styles/ratings.css")'>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Arvo">
</head>
<body>
    
    <div class="results-search">
        <a href='http://radsurge.com'><img src='@Url.Content("~/Content/Images/logo.png")' class="logo" alt="Radsurge" width="150" style="float:left"/></a>
        @using (Html.BeginForm("index", "search", FormMethod.Post, new { @class = "form-wrapper" }))
        {
            @Html.TextBoxFor(model => model.SearchTerm)
            <button type="submit"></button>
        }        
    </div>

    @foreach (var item in Model.ReturnedResults)
    {

    <div class="results-content">
        <div class="wrapper">
            <div class="left_container">
                <div class="content">
                    <img src='@Url.Content(item.MerchantProductImage)' class="clip"/>
                </div>
                <div class="content">
                    <img src='@Url.Content(item.DeveloperProductImage)' />
                </div>
            </div>
            <div class="right_container">
                <div class="content">
                    <div class="deal">@item.MerchantIncentive</div>
                    <div class="context"><i class="icon-shopping-cart"></i>&nbsp;@item.MerchantName</div>
                    <div class="title">@item.DeveloperProductName</div>
                    <div class="context"><i class="icon-mobile-phone"></i>&nbsp;@item.DeveloperProductClaim</div>

                    <div class="ui">
                        <div class="buttons"><button class="color red button">Download</button></div>
                        <div class="buttons"><button class="color blue button">Vendor Site</button></div>
                        <div class="rating pad">
                            <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1"/>
                                <label for="rating-input-1-5" class="rating-star"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1"/>
                                <label for="rating-input-1-4" class="rating-star"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1"/>
                                <label for="rating-input-1-3" class="rating-star"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1"/>
                                <label for="rating-input-1-2" class="rating-star"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1"/>
                                <label for="rating-input-1-1" class="rating-star"></label>
                        </div>
                    </div>
                </div>
        </div>
        </div>
    </div>

    }
</body>
</html>
